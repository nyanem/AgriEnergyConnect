@model IEnumerable<AgriEnergyConnect.Models.Farmer>

@{
    ViewData["Title"] = "Index";
}

<div class="card shadow-sm">
    <div class="card-header bg-success text-white fw-bold">
        Farmers
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-success">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var farmer in Model)
                {
                    <tr>
                        <td>@farmer.FullName</td>
                        <td>@farmer.Email</td>
                        <td>
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@farmer.FarmerId">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@farmer.FarmerId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-success" asp-action="Create">Add Farmer</a>
    </div>
</div>
